#local-search
  .search-dialog
    nav.search-nav
      each langPrefix, lang in langPrefices
        span(lang-type='relative' language=lang).search-dialog-title= _p(langPrefix+'search.title')
      span#loading-status
      button.search-close-button
        i.fas.fa-times

    #loading-database.text-center
      i.fas.fa-spinner.fa-pulse
      each langPrefix, lang in langPrefices
        span(lang-type='relative' language=lang)= '  ' + _p(langPrefix+'search.loading_data')

    .search-wrap
      #local-search-input
        .local-search-box
          input(placeholder=theme.search.placeholder || _p("search.input_placeholder") type="text").local-search-box--input
      hr
      #local-search-results
      #local-search-stats-wrap
  #search-mask

  script(src=url_for(theme.asset.local_search))