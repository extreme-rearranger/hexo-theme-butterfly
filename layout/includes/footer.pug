#footer-wrap
  if theme.footer.owner.enable
    - const currentYear = new Date().getFullYear()
    - const sinceYear = theme.footer.owner.since
    .copyright
      if sinceYear && sinceYear != currentYear
        != `&copy;${sinceYear} - ${currentYear} By ${config.author}`
      else
        != `&copy;${currentYear}  By  ${config.author}`
  if theme.footer.copyright
    .framework-info
      each langPrefix, lang in langPrefices
        span(lang-type='relative' language=lang)= _p(langPrefix+'footer.framework') + ' '
      a(href='https://hexo.io')= 'Hexo'
      span.footer-separator |
      each langPrefix, lang in langPrefices
        span(lang-type='relative' language=lang)= _p(langPrefix+'footer.theme') + ' '
      a(href='https://github.com/jerryc127/hexo-theme-butterfly')= 'Butterfly'
  if theme.footer.custom_text
    .footer_custom_text!= theme.footer.custom_text