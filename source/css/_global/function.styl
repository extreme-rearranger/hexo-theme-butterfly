.limit-one-line
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.limit-more-line
  display: block
  overflow: hidden

.fontawesomeIcon
  display: inline-block
  font-weight: 600
  font-family: 'Font Awesome 6 Free'
  text-rendering: auto
  -webkit-font-smoothing: antialiased

addBorderRadius(x = 6, hide = false)
  if hexo-config('rounded_corners_ui')
    border-radius: unit(x, 'px')

    if hide
      overflow: hidden

// card hover
.cardHover
  border-radius: 8px
  background: var(--card-bg)
  box-shadow: 0 3px 8px 6px var(--card-box-shadow)
  transition: box-shadow .3s

  &:hover
    box-shadow: 0 3px 8px 6px var(--card-hover-box-shadow)

.imgHover
  width: 100%
  height: 100%
  transition: transform .6s // all .6s, filter 375ms ease-in .2s
  object-fit: cover

  &:hover
    transform: scale(1.1)

.postImgHover
  &:hover
    .cover
      opacity: .7 // original: .8
      transform: scale(1.1)

  .cover
    position: absolute
    width: 100%
    height: 100%
    opacity: .1 // original: .4
    transition: all .6s // , filter 375ms ease-in .2s
    object-fit: cover

.list-beauty
  list-style: none

  li
    position: relative
    padding: .12em .4em 0 1.4em  // original: .12em .4em .12em 1.4em

    &:hover
      &::before
        border-color: var(--pseudo-hover)

    &::before
      position: absolute
      top: .43em
      left: 0
      width: w = .43em
      height: h = w
      border: .5 * w solid var(--theme-color)
      border-radius: w
      background: transparent
      content: ''
      cursor: pointer
      transition: border-color .3s ease-out

.verticalCenter
  position: absolute
  top: 50%
  width: 100%
  transform: translate(0, -50%)

.custom-hr
  position: relative
  margin: 40px auto
  border: 2px dashed var(--hr-border)

  if hexo-config('hr_icon.enable')
    width: calc(100% - 4px)

    &:hover
      &::before
        left: calc(95% - 20px)

    &::before
      position: absolute
      top: $hr-icon-top
      left: 5%
      z-index: 1
      color: var(--hr-before-color)
      content: $hr-icon
      font-size: 20px
      line-height: 1
      transition: left 1s ease-in-out
      @extend .fontawesomeIcon

