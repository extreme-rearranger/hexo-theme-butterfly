#rightside
  position: fixed
  right: -3em  // original: -48px
  bottom: $rightside-bottom
  z-index: 100
  opacity: 0
  transition: opacity .5s, transform .5s

  &.rightside-show
    opacity: .8
    transform: translate(-3.7em, 0)  // original: translate(-58px, 0)

  #rightside-config-hide
    height: 0
    opacity: 0
    transition: transform .4s
    transform: translate(3em, 0)  // original: translate(45px, 0)

    &.show
      height: auto
      opacity: 1
      transform: translate(0, 0)

    &.status
      height: auto
      opacity: 1

  & > div
    & > button,
    & > a
      display: block
      margin-bottom: 5px
      width: w = 2.2em  // original: 35px
      height: w
      border-radius: 5px
      background-color: var(--btn-bg)
      color: var(--btn-color)
      text-align: center
      font-size: 1.1em  // original: 16px
      line-height: w

      &:hover
        background-color: var(--btn-hover-color)
  
  & .slow-spin
    -webkit-animation: fa-spin 8s infinite linear;
    animation: fa-spin 8s infinite linear;

  #mobile-toc-button
    display: none

    +maxWidth900()
      display: block

  +maxWidth900()
    #hide-aside-btn
      display: none

  if hexo-config('rightside_scroll_percent')
    #go-up
      .scroll-percent
        display: none

      &.show-percent
        .scroll-percent
          display: block

          & + i
            display: none

      &:hover
        .scroll-percent
          display: none

          & + i
            display: block
