.post-copyright
  position: relative
  margin: 40px 0 10px
  padding: 10px 16px
  border: 1px solid var(--title-border-color)
  // transition: box-shadow .3s ease-in-out
  font-size: .9em

  &::before
    @extend .fontawesomeIcon
    position: absolute
    top: 2px
    right: 12px
    color: var(--theme-color)
    content: '\f1f9'
    font-size: 1.3em

  // &:hover
  //   box-shadow: 0 0 8px 0 rgba(232, 237, 250, .6), 0 2px 4px 0 rgba(232, 237, 250, .5)

  .post-copyright

    &-meta
      color: var(--theme-color)
      font-weight: 600  // original: bold

      i
        margin-right: 3px

    &-info
      padding-left: 6px

      a
        text-decoration: underline
        word-break: break-all

        &:hover
          text-decoration: none

  #post-outdate-notice
    position: relative
    margin: 0 0 20px
    background-color: $noticeOutdate-bg
    color: $noticeOutdate-color
    addBorderRadius(3)

    .num
      padding: 0 4px

    if hexo-config('noticeOutdate.style') == 'flat'
      padding: 0.6em 1em 0.5em 2.6em   // original: .5em 1em .5em 2.6em
      border-left: 5px solid $noticeOutdate-border

      &:before
        @extend .fontawesomeIcon
        position: absolute
        top: 52%   // original: 50%
        left: .9em
        color: $noticeOutdate-border
        content: '\f071'
        transform: translateY(-50%)
    
    else 
      padding: .5em 1.2em

  .ads-wrap
    margin: 40px 0
