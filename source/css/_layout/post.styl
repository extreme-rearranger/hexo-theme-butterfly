beautify()
  headStyle(fontsize)
    padding-left: unit(fontsize + 8, 'px')

    &::before
      font-size: unit(fontsize - 2, 'px')

    &:hover
      padding-left: unit(fontsize + 12, 'px')

  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    transition: padding .2s ease-out

    &::before
      position: absolute
      top: calc(50% - 7px)
      color: $title-prefix-icon-color
      content: $title-prefix-icon
      left: 0
      line-height: 1
      // transition: all .2s ease-out
      @extend .fontawesomeIcon

    &:hover
      &::before
        color: var(--theme-color)

  h1, h2, h3, h4, h5, h6
    padding-left: calc(1em + 8px)  // original: calc(1.25em + 8px)
    &::before
      font-size: calc(1em - 2px)  // original: calc(1.25em - 2px)
    &:hover
      padding-left: calc(1em + 12px)  // original: calc(1.25em + 12px)

  ol,
  ul
    p
      margin: 0 0 8px

  li
    &::marker
      color: var(--pseudo-color)
      font-weight: 600
      font-size: 1.05em

    &:hover
      &::marker
        color: var(--pseudo-hover)

  ul > li
    list-style-type: circle
  
  hr
    @extend .custom-hr

#article-container
  word-wrap: break-word
  overflow-wrap: break-word

  if hexo-config('text_align_justify')
    text-align: justify

  a
    color: var(--post-link-color)

    &:hover
      text-decoration: underline

  img
    display: block
    margin: 0 auto 20px
    max-width: 100%
    // transition: filter 375ms ease-in .2s 

  p
    margin: 0 0 1em  // original: margin: 0 0 16px

  iframe
    margin-bottom: 1.25em  // original: margin: 0 0 20px

  // kbd
