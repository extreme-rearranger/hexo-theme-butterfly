.tag-cloud
  &-list
    a
      display: inline-flex
      // padding: 0 8px
      transition: transform .3s, color .3s
      line-height: 1

      // additionals
      border: 1px solid
      border-radius: 4px
      vertical-align: middle
      margin: 0 4px 8px 4px
      background: var(--card-bg)

      &:hover
        color: var(--text-hover) !important
        transform: scale(1.1)

      // +maxWidth768()
      //   zoom: .85

      span
        padding: 4px 8px 4px
      
      span:first-child
        border-right: 1px solid

  &-title
    font-size: 2.57em

    +maxWidth768()
      font-size: 2em
