#article-container
  .btn-center
    margin: 0 0 20px
    text-align: center

  .btn-beautify
    display: inline-block
    margin: 0 4px 6px
    padding: 0 15px
    line-height: 2

    background-color: var(--btn-beautify-color, $btn-default-color)
    color: $btn-color
    +darkmode()
      background-color: var(--btn-beautify-color, $btn-default-color-dark)
      color: $btn-color-dark

    for $type in $color-types
      &.{$type}
        --btn-beautify-color: lookup('$tagsP-' + $type + '-color')
        +darkmode()
          --btn-beautify-color: lookup('$tagsP-' + $type + '-color-dark')

    &:hover
      background-color: var(--btn-hover-color)

    i + span
      margin-left: 6px

    &:not(.block) + .btn-beautify:not(.block)
      margin: 0 4px 20px

    &.block
      display: block
      margin: 0 0 20px
      width: fit-content

      &.center
        margin: 0 auto 20px

      &.right
        margin: 0 0 20px auto

    &.larger
      padding: 6px 15px

    &:hover
      text-decoration: none

    &.outline
      border: 1px solid transparent
      background-color: transparent

      border-color: var(--btn-beautify-color, $btn-default-color)
      color: var(--btn-beautify-color, $btn-default-color)
      +darkmode()
        border-color: var(--btn-beautify-color, $btn-default-color-dark)
        color: var(--btn-beautify-color, $btn-default-color-dark)

      &:hover
        background-color: var(--btn-beautify-color, $btn-default-color)
        +darkmode()
          background-color: var(--btn-beautify-color, $btn-default-color-dark)

      &:hover
        color: white !important
